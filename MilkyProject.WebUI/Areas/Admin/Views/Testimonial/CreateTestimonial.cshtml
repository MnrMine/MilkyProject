@model MilkyProject.WebUI.Dtos.TestimonialDtos.CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Areas/Admin/Views/Default/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Yeni Referans Ekleme Sayfası</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Referans İşlemleri</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Yeni Referans </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Referans Ekleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki alanları eksiksiz doldurarak referans ekleme işlemini tamamlayabilirsiniz.
                    </p>
                    <form method="post">


                        <label>Adı </label>
                        <input type="text" asp-for="name" class="form-control" />
                        <br />
                        <label>Fotoğraf </label>
                        <input type="text" asp-for="imageUrl" class="form-control" />
                        <br />
                       
                        <label>Açıklama </label>
                        <input type="text" asp-for="description" class="form-control" />
                        <br />
                        <button class="btn btn-info">Referans Kaydet</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
