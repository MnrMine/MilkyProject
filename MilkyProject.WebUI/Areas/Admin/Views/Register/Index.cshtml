@model MilkyProject.WebUI.Dtos.Register.CreateRegister
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>RegistrationForm_v10 by Colorlib</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- LINEARICONS -->
	<link rel="stylesheet" href="~/colorlib-regform-26/fonts/linearicons/style.css">

	<!-- STYLE CSS -->
	<link rel="stylesheet" href="~/colorlib-regform-26/css/style.css">
</head>

<body>

	<div class="wrapper">
		<div class="inner">
			<img src="~/colorlib-regform-26/images/image-1.png" alt="" class="image-1">
			<form method="post">
				
				<h3>Hesap Oluştur</h3>
				<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input type="text" class="form-control" placeholder="Adınız" asp-for="Name">
					<span asp-validation-for="Name" class="text-warning"></span>
				</div>
				<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input type="text" class="form-control" placeholder="Soyadınız" asp-for="Surname">
					<span asp-validation-for="Surname" class="text-warning"></span>
				</div>
				<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="Username">
					<span asp-validation-for="Username" class="text-warning"></span>
				</div>
				
				<div class="form-holder">
					<span class="lnr lnr-envelope"></span>
					<input type="text" class="form-control" placeholder="Mail" asp-for="Mail">
					<span asp-validation-for="Mail" class="text-warning"></span>
				</div>
				<div class="form-holder">
					<span class="lnr lnr-lock"></span>
					<input type="password" class="form-control" placeholder="Şifre" asp-for="Password">
					<span asp-validation-for="Password" class="text-warning"></span>
				</div>
				<div class="form-holder">
					<span class="lnr lnr-lock"></span>
					<input type="password" class="form-control" placeholder="Şifre Tekrar" asp-for="ConfirmPassword">
					<span asp-validation-for="ConfirmPassword" class="text-warning"></span>
				</div>
				<button type="submit" class="btn btn-primary mt-4">Hesap Oluştur</button>
			</form>
			<img src="~/colorlib-regform-26/images/image-2.png" alt="" class="image-2">
		</div>

	</div>

	<script src="~/colorlib-regform-26/js/jquery-3.3.1.min.js"></script>
	<script src="~/colorlib-regform-26/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>