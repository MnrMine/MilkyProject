@model  MilkyProject.WebUI.Dtos.ServiceDtos.CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Areas/Admin/Views/Default/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Yeni Hizmet Ekleme Sayfası</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Hizmerler İşlemleri</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Yeni Hizmet </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Hizmet Ekleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki alanları eksiksiz doldurarak hizmet ekleme işlemini tamamlayabilirsiniz.
                    </p>
                    <form method="post">


                        <label>Hizmet Adı </label>
                        <input type="text" asp-for="title" class="form-control" />
                        <br />
                        <label>Resim</label>
                        <input type="text" asp-for="imageUrl" class="form-control" />
                        <br />

                        <label>Açıklama</label>
                        <input type="text" asp-for="description" class="form-control" />
                        <br />
                        
                        <br />
                        <button class="btn btn-info">Hizmet Kaydet</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
                        