@model MilkyProject.WebUI.Dtos.ServiceDtos.UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Areas/Admin/Views/Default/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Hizmet Güncelleme  Sayfası</h3>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Hizmet İşlemleri</a></li>
                <li class="breadcrumb-item active" aria-current="page">Hizmet Düzenleme </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hizmet Düzenleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki tablodan hizmet üzerinde işlem yapabilirsiniz
                    </p>
                    <div class="table-responsive">
                        <form method="post">

                           
                            <label>Service Id</label>
                            <input type="text" asp-for="serviceID" class="form-control" />

                            <label>Hizmet Adı</label>
                            <input type="text" asp-for="title" class="form-control" />
                            <br />
                            <label>Resim</label>
                            <input type="text" asp-for="imageUrl" class="form-control" />
                            <br />
                            <label>Açıklama </label>
                            <input type="text" asp-for="description" class="form-control" />
                            <br />
                            <button class="btn btn-info">Hizmet Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

