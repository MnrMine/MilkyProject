@model List<MilkyProject.WebUI.Dtos.Gallery.ResultGalleryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Default/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Galeri </h3>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Galeri</h4>
                    <p class="card-description">
                        Aşagıdaki tablodan  galeri bilgilerini görüntüleyebilir,uzerinde işlem yapabilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                 
                                    <th>Resim</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {

                                    <tr>

                                        <td>@item.galleryID</td>
                                    
                                        @* <td>@item.imageUrl</td> *@
                                        <td><img alt="Image placeholder" src="@item.imageUrl"></td>
                                        <td><a href="/Admin/Gallery/DeleteGallery/@item.galleryID" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/Gallery/UpdateGallery/@item.galleryID" class="btn btn-success">Güncelle</a></td>
                                        
                                    </tr>

                                }



                            </tbody>
                        </table>
                        <a href="/Admin/Gallery/CreateGallery" class="btn btn-primary">Yeni Resim Girişi</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



