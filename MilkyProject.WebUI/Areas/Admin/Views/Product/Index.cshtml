@model List<MilkyProject.WebUI.Dtos.ProductDtos.ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Default/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Ürünler </h3>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ürünler</h4>
                    <p class="card-description">
                        Aşagıdaki tablodan  ürünlerin bilgilerini görüntüleyebilir,uzerinde işlem yapabilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>#</th>
                                    <th>Ürün Adı</th>
                                    <th>Eski Fiyat</th>
                                    <th>Yeni Fiyat</th>
                                    <th>Kategori Adı</th>
                                    <th>Durum</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {

                                    <tr>

                                        <td>@item.ProductId</td>
                                       <td><img alt="Image placeholder" src="@item.ImageUrl" ></td>
                                        <td>@item.ProductName</td>
                                        <td>@item.OldPrice</td>
                                        <td>@item.NewPrice</td>
                                        <td>@item.category.CategoryName</td>
                                        <td>@item.Status</td>

                                        <td><a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>

                                    </tr>

                                }



                            </tbody>
                        </table>
                        <a href="/Admin/Product/CreateProduct" class="btn btn-primary">Yeni Ürün Girişi</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
