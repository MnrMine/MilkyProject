@model MilkyProject.WebUI.Dtos.ProductDtos.CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/Default/_AdminLayout.cshtml";
}

 <div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Yeni Ürün Ekleme Sayfası</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Ürün İşlemleri</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Yeni Ürün </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Ürün Ekleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki alanları eksiksiz doldurarak ürün ekleme işlemini tamamlayabilirsiniz.
                    </p>
                    <form method="post">
                        <label>Ürün Adı</label>
                        <input type="text" asp-for="ProductName" class="form-control" />
                        <br />
                        <label>Eski Fiyat</label>
                        <input type="text" asp-for="OldPrice" class="form-control" />
                        <br /> 
                        <label>Yeni Fiyat</label>
                        <input type="text" asp-for="NewPrice" class="form-control" />
                        <br />
                        <label>Fotoğraf </label>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                        <br />
                        <label>Kategori Seçin</label>
                        @Html.DropDownListFor(x => x.categoryId, (List<SelectListItem>)ViewBag.Index, new { @class = "form-control" })
                        <br />
                        <br />
                        <button class="btn btn-info">Ürünü Kaydet</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div> 
