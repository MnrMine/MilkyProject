@model List<MilkyProject.WebUI.Dtos.SliderDtos.ResultSliderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Default/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Slider </h3>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slider</h4>
                    <p class="card-description">
                        Aşagıdaki tablodan  slider bilgilerini görüntüleyebilir,uzerinde işlem yapabilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>

                                   
                                    

                                    <th>Resim</th>
                                    <th>Açıklama1</th>
                                    <th>Açıklama2</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {

                                    <tr>

                                        <td>@item.sliderId</td>
                                        
                                        <td><img alt="Image placeholder" src="@item.imageUrl"></td>
                                        <td>@item.description1</td>
                                        <td>@item.description2</td>


                                        <td><a href="/Admin/Slider/DeleteSlider/@item.sliderId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/Slider/UpdateSlider/@item.sliderId" class="btn btn-success">Güncelle</a></td>

                                    </tr>

                                }



                            </tbody>
                        </table>
                        <a href="/Admin/Slider/CreateSlider" class="btn btn-primary">Yeni Slider Girişi</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
